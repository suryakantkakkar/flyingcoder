#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define ld long double
#define mod 1000000007
#define pb push_back
#define pii pair<int,int>
#define endl '\n'
ll dp[1000006];
void  getans()
{
  memset(dp,0,sizeof dp);
  ll n;
  cin>>n;
  dp[0]=1;
  dp[1]=1;
 for(int i=2;i<=n;i++)
 {
   for(int j=1;j<=6;j++)
   {
      if(i-j>=0)
      {
      (dp[i]+=dp[i-j])%=mod;
      }
   }
 }
  cout<<dp[n];
}
 
int main()
{ 
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   
   int test;    test=1;
   //cin>>test;
   while(test--) 
   getans();
   
   return 0;
}
